{
  "author": "Galveston01",
  "description": "Frontier Silicon Internet Radio support",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "primary_type": "adapter",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0"
    }
  },
  "homepage_url": "https://github.com/Galveston01/frontier-silicon-adapter",
  "id": "frontier-silicon-adapter",
  "license": "GPL-3.0",
  "manifest_version": 1,
  "name": "Frontier Silicon Internet Radio",
  "short_name": "FS-Radio",
  "version": "0.7.0",

  "options": {
    "default": {
      "pin": "1234",
      "ssdpPollInterval": 60000,
      "emojis": false
    },
    "schema": {
      "type": "object",
      "required": [
        "pin",
        "ssdpPollInterval",
        "emojis"
      ],
      "properties": {
        "pin": {
          "description": "PIN of your radio devices",
          "type": "string"
        },
        "ssdpPollInterval": {
          "description": "Interval in milliseconds that defines how often to search for new radios",
          "type": "integer"
        },
        "emojis": {
          "description": "Use icons rather than text",
          "type": "boolean"
        }
      }
    }
  }
}
